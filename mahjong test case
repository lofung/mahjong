from TENPAIcounter import checkmahjong
from mahjongprint import mahjongprint

mahjongarray = [
    [101, 101, 101, 102, 103, 104, 105, 106, 107, 108, 109, 109, 109, 109],
    [101, 101, 101, 102, 103, 104, 105, 106, 107, 108, 109, 109, 109, 108],
    [101, 101, 101, 102, 103, 104, 105, 106, 107, 108, 109, 109, 109, 106],
    [101, 102, 103, 104, 104, 104, 104, 105, 105, 106, 106, 107, 107, 107],
    [101, 102, 102, 103, 103, 104, 105, 105, 106, 107, 107, 108, 108, 109],
    [101, 101, 101, 102, 103, 104, 105, 106, 106, 107, 107, 108, 108, 108],
    [101, 101, 102, 102, 103, 103, 101, 102, 103, 104, 105, 105, 104, 104],
    [101, 101, 101, 102, 103, 104, 104, 104, 105, 106, 106, 107, 107, 108],
    [102, 103, 104, 105, 106, 107, 108, 102, 103, 104, 105, 106, 107, 108],
    [101, 101, 103, 103, 105, 105, 107, 107, 109, 109, 410, 410, 420, 420],
    [101, 101, 101, 301, 301, 301, 305, 305, 305, 202, 202, 202, 410, 410]
]

for mahjong in mahjongarray:
    result = checkmahjong(mahjong)
    if result == 1:
        print(mahjongprint(mahjong))
        print('this hand is mahjong')
        print('---------------------------')
        print('')
    else:
        print(mahjongprint(mahjong))
        print('this hand is epic fail')
        print('---------------------------')
        print('')
